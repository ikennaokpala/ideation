{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sparc-dsl.dev/schemas/simulation-event-taxonomy-v1.schema.json",
  "title": "Simulation event taxonomy (v1)",
  "description": "Contract for defining canonical event types and required props across fidelity profiles (Sprint 2).",
  "type": "object",
  "additionalProperties": true,
  "required": ["$schema", "schema", "version", "events"],
  "properties": {
    "$schema": { "type": "string" },
    "schema": { "const": "simulation_event_taxonomy_v1" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+(\\.\\d+)?$" },
    "namespace": { "type": "string" },
    "description": { "type": "string" },
    "events": { "type": "array", "items": { "$ref": "#/definitions/event_def" }, "minItems": 1 }
  },
  "definitions": {
    "event_def": {
      "type": "object",
      "additionalProperties": true,
      "required": ["event_type", "description"],
      "properties": {
        "event_type": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "category": { "type": "string" },
        "actor_types": {
          "type": "array",
          "items": { "enum": ["org", "user", "system"] },
          "minItems": 1
        },
        "profiles": {
          "type": "array",
          "items": { "enum": ["low", "high"] },
          "minItems": 1
        },
        "required_props": { "type": "array", "items": { "type": "string" } },
        "optional_props": { "type": "array", "items": { "type": "string" } },
        "props_schema": { "type": "object" },
        "entity_refs": { "type": "array", "items": { "type": "string" } },
        "tags": { "type": "array", "items": { "type": "string" } },
        "operational": { "type": "boolean" }
      }
    }
  }
}

