{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sparc-dsl.dev/schemas/simulation-vector-graph-v1.schema.json",
  "title": "Simulation vectors + journey graph contract (v1)",
  "description": "Contract for vector collection configs and a journey graph overlay (Sprint 7).",
  "type": "object",
  "additionalProperties": true,
  "required": ["$schema", "schema", "version", "vectors", "graph"],
  "properties": {
    "$schema": { "type": "string" },
    "schema": { "const": "simulation_vector_graph_v1" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+(\\.\\d+)?$" },
    "vectors": { "type": "array", "items": { "$ref": "#/definitions/vector_collection" }, "minItems": 1 },
    "embedding_strategies": { "type": "array", "items": { "type": "object" } },
    "graph": { "$ref": "#/definitions/graph_overlay" },
    "query_examples": { "type": "array", "items": { "type": "string" } }
  },
  "definitions": {
    "vector_collection": {
      "type": "object",
      "additionalProperties": true,
      "required": ["name", "dimensions", "distance_metric"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "dimensions": { "type": "integer", "minimum": 1 },
        "distance_metric": { "type": "string" },
        "hnsw_config": { "type": "object" },
        "quantization": { "type": "object" },
        "on_disk_payload": { "type": "boolean" },
        "payload_required_fields": { "type": "array", "items": { "type": "string" } }
      }
    },
    "graph_overlay": {
      "type": "object",
      "additionalProperties": true,
      "required": ["name", "node_types", "edge_types"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "node_types": { "type": "array", "items": { "$ref": "#/definitions/node_type" }, "minItems": 1 },
        "edge_types": { "type": "array", "items": { "$ref": "#/definitions/edge_type" }, "minItems": 1 }
      }
    },
    "node_type": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type", "key_fields"],
      "properties": {
        "type": { "type": "string", "minLength": 1 },
        "key_fields": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "required_fields": { "type": "array", "items": { "type": "string" } }
      }
    },
    "edge_type": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type", "from", "to"],
      "properties": {
        "type": { "type": "string", "minLength": 1 },
        "from": { "type": "string", "minLength": 1 },
        "to": { "type": "string", "minLength": 1 },
        "required_fields": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}

