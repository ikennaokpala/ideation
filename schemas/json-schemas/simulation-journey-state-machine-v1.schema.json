{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sparc-dsl.dev/schemas/simulation-journey-state-machine-v1.schema.json",
  "title": "Simulation journey state machine (v1)",
  "description": "Contract for explicit journey state machines with auditable transitions (Sprint 3).",
  "type": "object",
  "additionalProperties": true,
  "required": ["$schema", "schema", "version", "journey_name", "states", "transitions"],
  "properties": {
    "$schema": { "type": "string" },
    "schema": { "const": "simulation_journey_state_machine_v1" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+(\\.\\d+)?$" },
    "journey_name": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "states": { "type": "array", "items": { "$ref": "#/definitions/state_def" }, "minItems": 1 },
    "transitions": {
      "type": "array",
      "items": { "$ref": "#/definitions/transition_def" },
      "minItems": 1
    },
    "churn_reasons": { "type": "array", "items": { "$ref": "#/definitions/churn_reason" } }
  },
  "definitions": {
    "state_def": {
      "type": "object",
      "additionalProperties": true,
      "required": ["state"],
      "properties": {
        "state": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "terminal": { "type": "boolean" },
        "tags": { "type": "array", "items": { "type": "string" } }
      }
    },
    "transition_def": {
      "type": "object",
      "additionalProperties": true,
      "required": ["from", "to", "event_type"],
      "properties": {
        "name": { "type": "string" },
        "from": { "type": "string", "minLength": 1 },
        "to": { "type": "string", "minLength": 1 },
        "event_type": { "type": "string", "minLength": 1 },
        "guard": { "type": "string" },
        "measurable_as": { "type": "string" },
        "props_schema": { "type": "object" }
      }
    },
    "churn_reason": {
      "type": "object",
      "additionalProperties": true,
      "required": ["code", "description"],
      "properties": {
        "code": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "category": { "type": "string" }
      }
    }
  }
}

