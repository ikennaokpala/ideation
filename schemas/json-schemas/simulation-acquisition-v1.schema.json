{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sparc-dsl.dev/schemas/simulation-acquisition-v1.schema.json",
  "title": "Simulation acquisition + CAC contract (v1)",
  "description": "Contract for acquisition touchpoints, marketing spend, and attribution/CAC definition (Sprint 5).",
  "type": "object",
  "additionalProperties": true,
  "required": ["$schema", "schema", "version", "channels", "touchpoint_types"],
  "properties": {
    "$schema": { "type": "string" },
    "schema": { "const": "simulation_acquisition_v1" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+(\\.\\d+)?$" },
    "channels": { "type": "array", "items": { "$ref": "#/definitions/channel" }, "minItems": 1 },
    "touchpoint_types": {
      "type": "array",
      "items": { "$ref": "#/definitions/touchpoint_type" },
      "minItems": 1
    },
    "attribution_model": { "type": "object" }
  },
  "definitions": {
    "channel": {
      "type": "object",
      "additionalProperties": true,
      "required": ["channel_id", "name"],
      "properties": {
        "channel_id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string" }
      }
    },
    "touchpoint_type": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type", "description"],
      "properties": {
        "type": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "event_type": { "type": "string" }
      }
    }
  }
}

